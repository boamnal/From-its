<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fromits.app.repository.FriendsRepository">

    <select id="selectOne" parameterType="String" resultType="FriendsDto">
        SELECT user_id
        FROM friends
        WHERE user_id = #{userId}
    </select>
    <!--내 친구 보기-->
    <select id="getMyFriends" parameterType="String" resultType="friendsDto">
        SELECT *
        FROM friends
        where user_id != #{userId}
    </select>

    <insert id="addFriend" parameterType="FriendsDto">
        INSERT INTO friends (user_id, user_id2)
        VALUES (#{userId}, #{userId2}), (#{userId2}, #{userId})
    </insert>


    <delete id="delete" parameterType="String">
        DELETE
        FROM friends
        WHERE user_id = #{userId}
    </delete>


</mapper>