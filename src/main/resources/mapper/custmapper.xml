<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fromits.app.repository.CustRepository">

    <select id="selectOne" parameterType="String" resultType="custDto">
        SELECT *
        FROM user
        WHERE member_id = #{memberId}
    </select>

    <select id="select" resultType="custDto">
        SELECT *
        FROM user
    </select>


    <insert id="insert" parameterType="custDto">
        INSERT INTO user VALUES (#{userId}, #{email}, #{password}, #{address}, #{zipcode}, #{profile})
    </insert>

    <update id="update" parameterType="custDto">
        UPDATE user
        SET memberPw=#{password},
            memberEmail=#{email}
        WHERE memberId = #{user_id}
    </update>

    <delete id="delete" parameterType="String">
        DELETE
        FROM user
        WHERE memberId = #{user_id}
    </delete>

</mapper>